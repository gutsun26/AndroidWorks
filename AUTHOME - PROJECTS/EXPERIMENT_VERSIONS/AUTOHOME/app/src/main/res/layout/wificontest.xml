<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme"
    android:background="@color/backgrnd"
    tools:context="com.example.autohome.WifiCon">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="120dp"
        android:fontFamily="Verdana"
        android:theme="@style/AppTheme"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/txtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONNECTION STATUS"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="40dp"
        android:text="AUTO_HOME STATUS:"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/constat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="200dp"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="40dp"
        android:text="SIGNAL STRENGTH:"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/signal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="200dp"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"/>
    <Button
        android:id="@+id/checkStrength"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WIFI SIGNAL"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="40dp"
        android:textColor="#229f72"
        android:textStyle="bold"
        android:onClick="checkStrength"
        />

    <Button
        android:id="@+id/checkReception"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONNECTION"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="150dp"
        android:textColor="#229f72"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/receivedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="320dp"
        android:layout_marginLeft="40dp"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"/>
    <Button
        android:id="@+id/roomChoice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHOOSE ROOM"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="150dp"
        android:textColor="#229f72"
        android:textStyle="bold"
        />

</RelativeLayout>
