<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeWifiToDevice">

    <TextView
        android:id="@+id/homeRouterID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ROUTER ID:"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="25dp"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/homeRouterIDText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="ROUTER ID"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="150dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/homeRouterPWD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ROOM NAME"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/homeRouterPWDText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="ROOM NAME"
        android:layout_marginTop="85dp"
        android:layout_marginLeft="150dp"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/setButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/homeRouterPWDText"
        android:layout_marginLeft="150dp"
        android:text="SET"/>

    <Button
        android:id="@+id/checkButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="55dp"
        android:text="CHECK"/>

    <Button
        android:id="@+id/roomListButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setButton"
        android:layout_marginLeft="150dp"
        android:text="ROOMS"/>

</RelativeLayout>
