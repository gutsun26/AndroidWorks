<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme"
    android:background="@color/backgrnd"
    tools:context=".SubActivity">
    <TextView
        android:id="@+id/roomName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ROOM 1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="120dp"
        android:fontFamily="Verdana"
        android:theme="@style/AppTheme"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/lightOneText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LIGHT ONE"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="70dp"
        android:textStyle="bold"/>
    <Switch
        android:id="@+id/lightOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="200dp"
        android:switchMinWidth="90dp"
        />

    <TextView
        android:id="@+id/lightTwoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LIGHT TWO"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="70dp"
        android:textStyle="bold"/>
    <Switch
        android:id="@+id/lightTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="200dp"
        android:switchMinWidth="90dp"
        />

    <TextView
        android:id="@+id/lightThreeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LIGHT THREE"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="70dp"
        android:textStyle="bold"/>
    <Switch
        android:id="@+id/lightThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="200dp"
        android:switchMinWidth="90dp"
        />
    <Switch
        android:id="@+id/fan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="200dp"
        android:switchMinWidth="90dp"
        />

    <TextView
        android:id="@+id/fanText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="70dp"
        android:text="FAN"
        android:textStyle="bold"
        />
    <RadioButton
        android:id="@+id/speedOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="75dp"
        />

    <RadioButton
        android:id="@+id/speedTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="120dp"
        />

    <RadioButton
        android:id="@+id/speedThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="165dp"
        />

    <RadioButton
        android:id="@+id/speedFour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="210dp"
        />
