<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    tools:context=".panel_builder.PanelBuilderControlActivity"
    android:id="@+id/scrollView"
    android:scrollbars="vertical">
    <LinearLayout
        android:id="@+id/linLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CHANGE PHONE NUMBERS"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/imageButton1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/goprann"
                android:onClick="changeNumberFunction"/>
            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/goprann"
                android:onClick="changeNumberFunction"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/company"
                android:textStyle="bold"
                android:layout_marginLeft="0dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/self"
                android:textStyle="bold"
                android:layout_marginLeft="100dp"
                />
        </RelativeLayout>
        <TextView
            android:id="@+id/adminText"
            android:layout_width="100dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit_text_border"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="@string/self"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/dateTimeDisplay"
            android:layout_width="100dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit_text_border"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="DATE"
            android:textStyle="bold"
            />
        <Button
            android:backgroundTint="@color/Peru"
            android:textColor="@color/black"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit_text_border"
            android:textAlignment="center"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="PHONE BOOK"
            android:id="@+id/phoneBookButton"/>
        <EditText
            android:id="@+id/theReceivingNumber"
            android:layout_height="wrap_content"
            android:layout_width="200dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit_text_border"
            android:textAlignment="center"
            android:hint="NUMBER"
            android:textStyle="bold"
            android:inputType="number"
            android:maxLength="12"/>
        <EditText
            android:layout_marginTop="15dp"
            android:id="@+id/theClient"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_border"
            android:hint="CLIENT"
            android:textStyle="bold"
            android:textAlignment="center"
            android:inputType="text"
            android:maxLength="25"/>
        <Button
            android:id="@+id/insertTheDestNumberBtn"
            android:backgroundTint="@color/Peru"
            android:textColor="@color/black"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit_text_border"
            android:textAlignment="center"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="STORE"
            android:textStyle="bold"/>
        <TextView
            android:textColor="@color/black"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit_text_border"
            android:textAlignment="center"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="COMMAND CONTROLS"
            android:textStyle="bold"/>

        <Spinner
            android:layout_marginTop="15dp"
            android:id="@+id/destNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TableLayout
            android:layout_marginTop="35dp"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TableRow
                android:background="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_margin="1dp">
                <Button
                    android:id="@+id/CMD7"
                    android:backgroundTint="@color/Peru"
                    android:textColor="@color/Black"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/edit_text_border"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:text="MAIN CARD - INPUT"
                    android:layout_margin="1dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:onClick="sendSMS"/>
            </TableRow>
            <TableRow
                android:background="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_margin="1dp">
                <Button
                    android:id="@+id/CMD8"
                    android:backgroundTint="@color/Peru"
                    android:textColor="@color/Black"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/edit_text_border"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:text="MAIN CARD TERMINAL -\nINPUT"
                    android:layout_margin="1dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:onClick="sendSMS"/>
            </TableRow>

            <TableRow
                android:background="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_margin="1dp">
                <Button
                    android:id="@+id/CMD9"
                    android:backgroundTint="@color/Peru"
                    android:textColor="@color/Black"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/edit_text_border"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:text="MAIN CARD OUTPUT"
                    android:layout_margin="1dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:onClick="sendSMS"/>
            </TableRow>
            <TableRow
                android:background="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_margin="1dp">
                <Button
                    android:id="@+id/CMD10"
                    android:backgroundTint="@color/Peru"
                    android:textColor="@color/Black"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/edit_text_border"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:text="CBC - INPUTS"
                    android:layout_margin="1dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:onClick="sendSMS"/>
            </TableRow>
            <TableRow
                android:background="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_margin="1dp">
                <Button
                    android:id="@+id/CMD11"
                    android:backgroundTint="@color/Peru"
                    android:textColor="@color/Black"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/edit_text_border"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:text="CBC - OUTPUTS"
                    android:layout_margin="1dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:onClick="sendSMS"/>
            </TableRow>
            <TableRow
                android:background="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_margin="1dp">
                <Button
                    android:id="@+id/CMD12"
                    android:backgroundTint="@color/Peru"
                    android:textColor="@color/Black"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/edit_text_border"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:text="FLOOR UP KEYS"
                    android:layout_margin="1dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:onClick="sendSMS"/>
            </TableRow>
            <TableRow
                android:background="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_margin="1dp">
                <Button
                    android:id="@+id/CMD13"
                    android:backgroundTint="@color/Peru"
                    android:textColor="@color/Black"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/edit_text_border"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:text="FLOOR DOWN KEYS"
                    android:layout_margin="1dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:onClick="sendSMS"/>
            </TableRow>
            <TableRow
                android:background="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_margin="1dp">
                <Button
                    android:id="@+id/CMD14"
                    android:backgroundTint="@color/Peru"
                    android:textColor="@color/Black"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/edit_text_border"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:text="CAR KEYS"
                    android:layout_margin="1dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:onClick="sendSMS"/>
            </TableRow>
            <TableRow
                android:background="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_margin="1dp">
                <Button
                    android:id="@+id/CMD15"
                    android:backgroundTint="@color/Peru"
                    android:textColor="@color/Black"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/edit_text_border"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:text="LIFT STATUS"
                    android:layout_margin="1dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:onClick="sendSMS"/>
            </TableRow>
            <TableRow
                android:background="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_margin="1dp">
                <Button
                    android:id="@+id/CMD16"
                    android:backgroundTint="@color/Peru"
                    android:textColor="@color/Black"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/edit_text_border"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:text="LIFT ERROR STATUS"
                    android:layout_margin="1dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:onClick="sendSMS"/>
            </TableRow>
            <TableRow
                android:background="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_margin="1dp">
                <Button
                    android:id="@+id/CMD17"
                    android:backgroundTint="@color/Peru"
                    android:textColor="@color/Black"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/edit_text_border"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:text="EMERGENCY STOP"
                    android:layout_margin="1dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:onClick="sendSMS"/>
            </TableRow>
            <TableRow
                android:background="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_margin="1dp">
                <Button
                    android:id="@+id/CMD18"
                    android:backgroundTint="@color/Peru"
                    android:textColor="@color/Black"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/edit_text_border"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:text="EMERGENCY RELEASE"
                    android:layout_margin="1dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:onClick="sendSMS"/>
            </TableRow>
            <TableRow
                android:background="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_margin="1dp">
                <Button
                    android:id="@+id/CMD19"
                    android:backgroundTint="@color/Peru"
                    android:textColor="@color/Black"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/edit_text_border"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:text="START MONITORING"
                    android:layout_margin="1dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:onClick="sendSMS"/>
            </TableRow>
            <TableRow
                android:background="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_margin="1dp">
                <Button
                    android:id="@+id/CMD20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:text="EMERGENCY STOP STATUS READ"
                    android:layout_margin="1dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:background="@color/Background"
                    android:textColor="@color/Maroon"
                    android:onClick="sendSMS"/>
            </TableRow>
        </TableLayout>
    </LinearLayout>
</ScrollView>