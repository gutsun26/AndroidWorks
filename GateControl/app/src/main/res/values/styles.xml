<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#333399</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/accessibility_focus_highlight</item>
    </style>

    <style name="AppTheme.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.MyWindowTitle">
        <item name="windowNoTitle">false</item>
        <item name="android:text">"Sites"</item>
    </style>
    <style name="Theme.Transparent" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <style name="Theme.Option1" parent="android:Theme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:text">Change Site Numbers</item>
    </style>
    <style name="Theme.Option2" parent="android:Theme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:text">Change Pan. Bldr. Numbers</item>
    </style>
    <style name="Theme.Option3" parent="android:Theme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:text">Change Self Numbers</item>
    </style>
</resources>
